# Backend Configuration
DATABASE_URL=postgresql://genai_user:genai_password@localhost:5432/genai_governance_db
REDIS_URL=redis://localhost:6379/0
SECRET_KEY=your-secret-key-change-in-production-32-chars-minimum
ENVIRONMENT=development

# FastAPI
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# LLM & Embeddings (for RAG)
OPENAI_API_KEY=sk-...your-key-here
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-large

# Alternative: Local/open-source models
USE_LOCAL_LLM=false
LOCAL_LLM_URL=http://localhost:11434  # Ollama endpoint
LOCAL_EMBEDDING_MODEL=all-minilm-l6-v2

# NLI Model (for entailment verification - local, no API key needed)
NLI_MODEL=roberta-large-mnli

# Logging & Transparency
LOG_RETENTION_DAYS=90
PSEUDONYM_ROTATION_DAYS=30
ENABLE_DETAILED_TRACES=true

# Frontend Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_APP_NAME=GenAI Governance Platform

# Admin & Verification
ADMIN_EMAIL=admin@institution.edu
SUPPORT_EMAIL=ai-governance@institution.edu

# Optional: Analytics & Monitoring
SENTRY_DSN=
DATADOG_API_KEY=

# Optional: Cloud Storage (for policy PDFs)
AWS_S3_BUCKET=genai-governance-policies
GCP_BUCKET=genai-governance-policies
USE_CLOUD_STORAGE=false
